<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp">


    <TextView
        android:id="@+id/icon_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/initial_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_contact"
        app:layout_constraintEnd_toEndOf="@+id/icon_contact"
        app:layout_constraintStart_toStartOf="@+id/icon_contact"
        app:layout_constraintTop_toTopOf="@+id/icon_contact"
        tools:text="M" />

    <TextView
        android:id="@+id/name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:maxLength="25"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/icon_contact"
        app:layout_constraintTop_toTopOf="@+id/icon_contact"
        tools:text="Gabriel GarcÃ­a" />

    <TextView
        android:id="@+id/number_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="@color/textSecondary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name_contact"
        app:layout_constraintTop_toBottomOf="@+id/name_contact"
        tools:text="661937039" />

    <TextView
        android:id="@+id/call_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_call_intent"
        app:layout_constraintBottom_toBottomOf="@+id/icon_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_contact" />

    <TextView
        android:id="@+id/send_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_whatsapp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_contact"
        app:layout_constraintEnd_toStartOf="@+id/call_to"
        app:layout_constraintTop_toTopOf="@+id/name_contact" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/call_to"
        app:layout_constraintStart_toStartOf="@+id/icon_contact"
        app:layout_constraintTop_toBottomOf="@+id/icon_contact" />

</androidx.constraintlayout.widget.ConstraintLayout>